<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="#E3EEF4">

    <TextView
        android:id="@+id/wellcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/magis"
        android:gravity="center"
        android:text="ENTER YOU INFOMATION"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_infoDangKy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img"
        app:layout_constraintTop_toBottomOf="@id/wellcome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_spn"
        app:layout_constraintTop_toBottomOf="@id/edt_nameDangKy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/spn_gioiTinhDangKy"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_arrow_drop_down_circle_24"
        app:layout_constraintTop_toTopOf="@id/spn_gioiTinhDangKy"
        app:layout_constraintBottom_toBottomOf="@id/spn_gioiTinhDangKy"
        app:layout_constraintRight_toRightOf="@id/spn_gioiTinhDangKy"
        android:layout_marginRight="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/spn_gioiTinhDangKy"
        android:layout_marginTop="14dp"
        android:id="@+id/edt_emailDangKy"
        android:hint="Email"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_edt"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/edt_emailDangKy"
        android:layout_marginTop="14dp"
        android:id="@+id/edt_sdtDangKy"
        android:hint="Số điện thoại"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_edt"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/edt_sdtDangKy"
        android:layout_marginTop="14dp"
        android:id="@+id/edt_diachiDangKy"
        android:hint="Địa chỉ"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_edt"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/edt_diachiDangKy"
        android:layout_marginTop="14dp"
        android:id="@+id/edt_ngaySinhDangKy"
        android:hint="Ngày sinh"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_edt"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/img_infoDangKy"
        android:layout_marginTop="10dp"
        android:id="@+id/edt_nameDangKy"
        android:hint="Họ và tên"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_edt"/>

</androidx.constraintlayout.widget.ConstraintLayout>