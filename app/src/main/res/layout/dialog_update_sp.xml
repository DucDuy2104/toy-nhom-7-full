<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE TOY"
            android:id="@+id/header"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext"
            android:elevation="4dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/hint_edt"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:id="@+id/edt_nameSpUpdateAdmin"
            android:hint="Name"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext"
            android:elevation="4dp"
            android:textColorHint="@color/hint_edt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Price"
            android:inputType="number"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/edt_nameSpUpdateAdmin"
            android:id="@+id/edt_priceSpUpdateAdmin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext"
            android:elevation="4dp"
            android:textColorHint="@color/hint_edt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Material"
            app:layout_constraintTop_toBottomOf="@id/edt_priceSpUpdateAdmin"
            android:layout_marginTop="10dp"
            android:id="@+id/edt_materialSpUpadteAdmin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext"
            android:elevation="4dp"
            android:textColorHint="@color/hint_edt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Ratio"
            app:layout_constraintTop_toBottomOf="@id/edt_materialSpUpadteAdmin"
            android:layout_marginTop="10dp"
            android:id="@+id/edt_ratioUpdateSpAdmin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Height"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext"
            android:elevation="4dp"
            android:textColorHint="@color/hint_edt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/edt_ratioUpdateSpAdmin"
            android:layout_marginTop="10dp"
            android:id="@+id/edt_heightUpdateSpAdmin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext"
            android:elevation="4dp"
            android:textColorHint="@color/hint_edt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Date of manufacture"
            android:id="@+id/edt_dateUpdateSpAdmin"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/edt_heightUpdateSpAdmin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext"
            android:elevation="4dp"
            android:textColorHint="@color/hint_edt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_dateUpdateSpAdmin"
            android:layout_marginTop="10dp"
            android:id="@+id/edt_ageUpdateSpAdmin"
            android:hint="Age limited"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext"
            android:elevation="4dp"
            android:textColorHint="@color/hint_edt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Origin"
            app:layout_constraintTop_toBottomOf="@id/edt_ageUpdateSpAdmin"
            android:layout_marginTop="10dp"
            android:id="@+id/edt_originUpdateSpAdmin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="UPDATE"
            android:textStyle="bold"
            android:background="#073050"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_originUpdateSpAdmin"
            android:textSize="20sp"
            android:id="@+id/btn_updateSpAdmin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textSize="20sp"
            android:background="#6A1C1C"
            app:layout_constraintTop_toBottomOf="@id/btn_updateSpAdmin"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/btn_cancelUpdateSpAdmin"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>