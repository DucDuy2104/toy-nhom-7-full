<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/item_color"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:background="@color/item_color"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:backgroundTint="#fff"
            android:id="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                app:circularflow_radiusInDP="20dp"
                android:scaleType="centerCrop"
                android:id="@+id/img_itemLoai"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/baseline_account_circle_24" />

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:text="NAME LOAI"
            app:layout_constraintLeft_toRightOf="@id/cardView"
            app:layout_constraintTop_toTopOf="@id/cardView"
            app:layout_constraintBottom_toBottomOf="@id/cardView"
            android:layout_marginBottom="20dp"
            android:id="@+id/tv_nameItemLoai"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SL: 30"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_nameItemLoai"
            app:layout_constraintLeft_toLeftOf="@id/tv_nameItemLoai"
            android:id="@+id/tv_slItemLoai"/>

        <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/btn_deleteItemLoai"
            android:backgroundTint="#fff"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>