<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:background="@color/item_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="4dp"
        android:paddingBottom="10dp"
        android:background="@color/item_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_itemSanPhamUser"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gundam1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:ellipsize="start"
            android:maxLines="2"
            android:fontFamily="@font/ribon"
            android:id="@+id/tv_nameSpUser"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="NAME"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_itemSanPhamUser" />
        
        <TextView
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nameSpUser"
            app:layout_constraintLeft_toLeftOf="@id/tv_nameSpUser"
            app:layout_constraintRight_toRightOf="@id/tv_nameSpUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200.000đ"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:id="@+id/tv_priceSpUser"/>

        <TextView
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ratingSpUser"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_priceSpUser"
            app:layout_constraintLeft_toLeftOf="@id/tv_priceSpUser"
            app:layout_constraintRight_toRightOf="@id/tv_priceSpUser"
            android:text="4.5"/>

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/star"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@id/tv_ratingSpUser"
            app:layout_constraintBottom_toBottomOf="@id/tv_ratingSpUser"
            app:layout_constraintLeft_toRightOf="@id/tv_ratingSpUser"/>

        <Button
            android:elevation="10dp"
            android:id="@+id/btn_detailSpUser"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_btn_detail"
            android:text="XEM THÊM"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ratingSpUser" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>