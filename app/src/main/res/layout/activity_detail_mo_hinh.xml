<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".admin.activity.DetailMoHinhActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#f5f5f5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gundam1"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/img_moHinhDetailMhAdmin"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Name of the toy"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/tv_nameDetailSpAdmin"
        app:layout_constraintTop_toTopOf="@id/img_moHinhDetailMhAdmin"
        app:layout_constraintLeft_toRightOf="@id/img_moHinhDetailMhAdmin"
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:paddingRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: "
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_nameDetailSpAdmin"
        app:layout_constraintTop_toBottomOf="@id/tv_nameDetailSpAdmin"
        android:layout_marginTop="5dp"
        android:id="@+id/rating"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/rating"
        app:layout_constraintTop_toBottomOf="@id/rating"
        android:id="@+id/price"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:text="Amount: "
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintLeft_toLeftOf="@id/price"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sold: "
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/amount"
        app:layout_constraintLeft_toLeftOf="@id/amount"
        android:id="@+id/sold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: "
        android:id="@+id/type"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/img_moHinhDetailMhAdmin"
        app:layout_constraintLeft_toLeftOf="@id/img_moHinhDetailMhAdmin"
        android:layout_marginTop="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material: "
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/type"
        app:layout_constraintLeft_toLeftOf="@id/type"
        android:layout_marginTop="10dp"
        android:id="@+id/material"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ratio: "
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/material"
        app:layout_constraintLeft_toLeftOf="@id/material"
        android:layout_marginTop="10dp"
        android:id="@+id/ratio"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height: "
        android:textSize="15sp"
        android:textColor="@color/black"
        android:id="@+id/height"
        app:layout_constraintTop_toBottomOf="@id/ratio"
        app:layout_constraintLeft_toLeftOf="@id/ratio"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining: "
        android:id="@+id/remaining"
        app:layout_constraintTop_toBottomOf="@id/height"
        app:layout_constraintLeft_toLeftOf="@id/height"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of manufacture: "
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/remaining"
        app:layout_constraintLeft_toLeftOf="@id/remaining"
        android:layout_marginTop="10dp"
        android:id="@+id/date"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex: "
        android:id="@+id/sex"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintLeft_toLeftOf="@id/date"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age limited: "
        app:layout_constraintTop_toBottomOf="@id/sex"
        app:layout_constraintLeft_toLeftOf="@id/sex"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:id="@+id/ageLimit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origin: "
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ageLimit"
        app:layout_constraintLeft_toLeftOf="@id/ageLimit"
        android:layout_marginTop="10dp"
        android:id="@+id/origin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.5"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/rating"
        app:layout_constraintTop_toTopOf="@id/rating"
        app:layout_constraintBottom_toBottomOf="@id/rating"
        android:id="@+id/tv_ratingDetailSpAdmin"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/star"
        app:layout_constraintLeft_toRightOf="@id/tv_ratingDetailSpAdmin"
        app:layout_constraintTop_toTopOf="@id/tv_ratingDetailSpAdmin"
        app:layout_constraintBottom_toBottomOf="@id/tv_ratingDetailSpAdmin"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1200000"
        android:textColor="#FB0000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/price"
        app:layout_constraintTop_toTopOf="@id/price"
        app:layout_constraintBottom_toBottomOf="@id/price"
        android:id="@+id/tv_priceDetailSpAdmin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/amount"
        app:layout_constraintBottom_toBottomOf="@id/amount"
        app:layout_constraintTop_toTopOf="@id/amount"
        android:id="@+id/tv_amountDetailSpAdmin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/sold"
        app:layout_constraintBottom_toBottomOf="@id/sold"
        app:layout_constraintLeft_toRightOf="@id/sold"
        android:id="@+id/tv_soldDetailSpAdmin"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GunDam"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/img_moHinhDetailMhAdmin"
        app:layout_constraintTop_toTopOf="@id/type"
        app:layout_constraintBottom_toBottomOf="@id/type"
        android:id="@+id/tv_typeDetailSpAdmin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhá»±a PVC"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/material"
        app:layout_constraintLeft_toLeftOf="@id/tv_typeDetailSpAdmin"
        app:layout_constraintBottom_toBottomOf="@id/material"
        android:id="@+id/tv_materialDetailSpAdmin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:2"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_typeDetailSpAdmin"
        app:layout_constraintTop_toTopOf="@id/ratio"
        app:layout_constraintBottom_toBottomOf="@id/ratio"
        android:id="@+id/tv_ratioDetailSpAdmin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120cm"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_typeDetailSpAdmin"
        app:layout_constraintTop_toTopOf="@id/height"
        app:layout_constraintBottom_toBottomOf="@id/height"
        android:id="@+id/tv_heightDetailSpAdmin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_typeDetailSpAdmin"
        app:layout_constraintTop_toTopOf="@id/remaining"
        app:layout_constraintBottom_toBottomOf="@id/remaining"
        android:id="@+id/tv_remainingDetailSpAdmin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21/04/2004"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_typeDetailSpAdmin"
        app:layout_constraintTop_toTopOf="@id/date"
        app:layout_constraintBottom_toBottomOf="@id/date"
        android:id="@+id/tv_dateDetailSpAdmin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nam"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_typeDetailSpAdmin"
        app:layout_constraintTop_toTopOf="@id/sex"
        app:layout_constraintBottom_toBottomOf="@id/sex"
        android:id="@+id/tv_sexDetailSpAdmin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_typeDetailSpAdmin"
        app:layout_constraintTop_toTopOf="@id/ageLimit"
        app:layout_constraintBottom_toBottomOf="@id/ageLimit"
        android:id="@+id/tv_ageDetailSpAdmin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khanh Hoa"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_typeDetailSpAdmin"
        app:layout_constraintTop_toTopOf="@id/origin"
        app:layout_constraintBottom_toBottomOf="@id/origin"
        android:id="@+id/tv_originDetailSpAdmin"/>


    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:background="#185773"
        app:layout_constraintBottom_toTopOf="@id/btn_exitDetailSpAdmin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:id="@+id/btn_updateDetailAdmin"
        app:layout_constraintRight_toLeftOf="@id/btn_deleteDetailSpAdmin"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:background="#680D2C"
        app:layout_constraintBottom_toTopOf="@id/btn_exitDetailSpAdmin"
        android:textStyle="bold"
        android:id="@+id/btn_deleteDetailSpAdmin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_updateDetailAdmin"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:background="#000000"
        android:text="EXIT"
        android:id="@+id/btn_exitDetailSpAdmin"/>




</androidx.constraintlayout.widget.ConstraintLayout>